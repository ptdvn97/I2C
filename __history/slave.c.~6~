#include <slave.h>




void main()
{
   output_d(0x00);
   enable_interrupts(INT_SSP);
   enable_interrupts(GLOBAL);
   while(TRUE)
   {}

}


#INT_SSP
void readi2c()
{
   int a;
   a = i2c_read();
   if(a==1)
   output_bit(PIN_D0,1);
   if(a==2)
   output_bit(PIN_D1,1);
   if(a==3)
   output_bit(PIN_D2,1);
}
