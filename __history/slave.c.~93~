#include <slave.h>
#include <lcd.h>

int signal=99,index1=7,index2=1;
int8 led[8] = {0b00000001,0b00000010,0b00000100,0b00001000,0b00010000,0b00100000,0b01000000,0b10000000};
void reset()
{
   lcd_init();
   lcd_putc('\f');
   lcd_gotoxy(1,1);
   printf(lcd_putc,"Value:");
   signal=99,index1=7,index2=1;
}
#INT_SSP
void ngatSSP()
{
   signal = i2c_read();
   if(signal>0&&signal<9)
   {
      output_b(led[signal-1]);
   }
}

void showNumb()
{
   if(signal == 11)
      {
         reset();
      }
   if(signal!=99)
   {
   if(signal == 11)
      {
         reset();
      }
      lcd_gotoxy(index1,index2);
      printf(lcd_putc,"%d",signal);
      index1++;
      if(index1==16)
      {
         index2++;
         index1 = 1;
      }
      signal=99;
   }
}


void main()
{
   lcd_init();
   lcd_putc('\f');
   lcd_gotoxy(1,1);
   printf(lcd_putc,"Value:");
   enable_interrupts(INT_SSP);
   enable_interrupts(GLOBAL);
   if(signal == 11)
      {
         reset();
      }
   while(1)
   {
      if(signal == 11)
      {
         reset();
      }
      showNumb();
      if(signal == 11)
      {
         reset();
      }
   }
}



